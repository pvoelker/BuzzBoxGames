<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:b="clr-namespace:BuzzBoxGamesApp.Behaviors"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BuzzBoxGames.ViewModel.Game;assembly=BuzzBoxGames.ViewModel"
             xmlns:local="clr-namespace:BuzzBoxGamesApp.Game"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="BuzzBoxGamesApp.Game.DropTacToe"
             Title="Reaction Time"
             Unloaded="ContentPage_Unloaded">
    <ContentPage.Resources>
        <Style x:Key="winner" TargetType="Label">
            <Setter Property="Padding" Value="10" />
            <Setter Property="TextColor" Value="Yellow" />
            <Setter Property="Background" Value="#44000000" />
            <Setter Property="FontFamily" Value="SuperFresh" />
            <Setter Property="FontSize" Value="{OnPlatform Default='100', MacCatalyst='129.9'}" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
        </Style>

        <Style x:Key="inGameInstructions" TargetType="Label">
            <Setter Property="FontFamily" Value="Stepalange" />
            <Setter Property="TextColor" Value="Orange" />
            <Setter Property="Background" Value="#99272727" />
            <Setter Property="FontSize" Value="{OnPlatform Default='48', MacCatalyst='62.3'}" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
            <Setter Property="LineBreakMode" Value="WordWrap" />
        </Style>

        <Style x:Key="paddleNum" TargetType="Label">
            <Setter Property="FontFamily" Value="Stepalange" />
            <Setter Property="TextColor" Value="WhiteSmoke" />
            <Setter Property="Background" Value="#99272727" />
            <Setter Property="FontSize" Value="{OnPlatform Default='37', MacCatalyst='46.8'}" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
            <Setter Property="LineBreakMode" Value="WordWrap" />
        </Style>
    </ContentPage.Resources>
    <ContentPage.Behaviors>
        <b:TicTacToeInvalidMove SoundName="wrong_buzzer.mp3" />
        <b:TicTacToeValidMove SoundName="ding.mp3" />
        <b:TicTacToeWinningMove SoundName="fanfare.mp3" />
    </ContentPage.Behaviors>
    <Grid x:DataType="vm:DropTacToe">
        <Image Source="bricks_background.jpg" Aspect="AspectFill" />
        <VerticalStackLayout IsVisible="{Binding Path=GameIsWaiting}">
            <Border Style="{StaticResource instructionsBg}">
                <Label Style="{StaticResource instructions}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Style="{StaticResource instructionsText}" Text="Instructions: " FontAttributes="Bold" />
                            <Span Style="{StaticResource instructionsText}" TextColor="DarkGreen" Text="Green (O)" />
                            <Span Style="{StaticResource instructionsText}" Text=" and " />
                            <Span Style="{StaticResource instructionsText}" TextColor="DarkRed" Text="Red (X)" />
                            <Span Style="{StaticResource instructionsText}" Text=" paddles take turns adding their team tokens to one of four labelled columns. If either side gets three in a row, that side wins!" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Border>
            <Button Style="{StaticResource startButton}" Command="{Binding Path=StartGame}" Margin="40" Text="Start Game"/>
            <Label Style="{StaticResource restartCountdown}"
                   Text="{Binding Path=RestartCountdown, StringFormat='Game Restarting in {0} seconds...'}"
                   IsVisible="{Binding Path=HasRestartCountdown}"/>
            <Label Style="{StaticResource winner}" IsVisible="{Binding Path=AreGreenPaddlesWinner}">Green paddles are the Winner!</Label>
            <Label Style="{StaticResource winner}" IsVisible="{Binding Path=AreRedPaddlesWinner}">Red paddles are the Winner!</Label>
            <Label Style="{StaticResource winner}" IsVisible="{Binding Path=IsGameDraw}">The match was draw!</Label>
        </VerticalStackLayout>
        <Grid IsVisible="{Binding Path=GameIsStarted}" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="7"
                   Style="{StaticResource inGameInstructions}"
                   IsVisible="{Binding Path=GreenPaddlesTurn}"
                   Text="Green Paddles Turn!" />
            <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="7"
                   Style="{StaticResource inGameInstructions}"
                   IsVisible="{Binding Path=RedPaddlesTurn}"
                   Text="Red Paddles Turn!" />

            <Label Grid.Column="0" Grid.Row="2"
                   Style="{StaticResource paddleNum}"
                   Text="Paddle 1" />
            <Label Grid.Column="2" Grid.Row="2"
                   Style="{StaticResource paddleNum}"
                   Text="Paddle 2" />
            <Label Grid.Column="4" Grid.Row="2"
                   Style="{StaticResource paddleNum}"
                   Text="Paddle 3" />
            <Label Grid.Column="6" Grid.Row="2"
                   Style="{StaticResource paddleNum}"
                   Text="Paddle 4" />

            <local:TicTacToeElement Grid.Row="4" Grid.Column="0" Value="{Binding Path=Data_0_0.Value}" IsWinner="{Binding Path=Data_0_0.IsWinner}" />
            <local:TicTacToeElement Grid.Row="4" Grid.Column="2" Value="{Binding Path=Data_0_1.Value}" IsWinner="{Binding Path=Data_0_1.IsWinner}" />
            <local:TicTacToeElement Grid.Row="4" Grid.Column="4" Value="{Binding Path=Data_0_2.Value}" IsWinner="{Binding Path=Data_0_2.IsWinner}" />
            <local:TicTacToeElement Grid.Row="4" Grid.Column="6" Value="{Binding Path=Data_0_3.Value}" IsWinner="{Binding Path=Data_0_3.IsWinner}" />
            <local:TicTacToeElement Grid.Row="6" Grid.Column="0" Value="{Binding Path=Data_1_0.Value}" IsWinner="{Binding Path=Data_1_0.IsWinner}" />
            <local:TicTacToeElement Grid.Row="6" Grid.Column="2" Value="{Binding Path=Data_1_1.Value}" IsWinner="{Binding Path=Data_1_1.IsWinner}" />
            <local:TicTacToeElement Grid.Row="6" Grid.Column="4" Value="{Binding Path=Data_1_2.Value}" IsWinner="{Binding Path=Data_1_2.IsWinner}" />
            <local:TicTacToeElement Grid.Row="6" Grid.Column="6" Value="{Binding Path=Data_1_3.Value}" IsWinner="{Binding Path=Data_1_3.IsWinner}" />
            <local:TicTacToeElement Grid.Row="8" Grid.Column="0" Value="{Binding Path=Data_2_0.Value}" IsWinner="{Binding Path=Data_2_0.IsWinner}" />
            <local:TicTacToeElement Grid.Row="8" Grid.Column="2" Value="{Binding Path=Data_2_1.Value}" IsWinner="{Binding Path=Data_2_1.IsWinner}" />
            <local:TicTacToeElement Grid.Row="8" Grid.Column="4" Value="{Binding Path=Data_2_2.Value}" IsWinner="{Binding Path=Data_2_2.IsWinner}" />
            <local:TicTacToeElement Grid.Row="8" Grid.Column="6" Value="{Binding Path=Data_2_3.Value}" IsWinner="{Binding Path=Data_2_3.IsWinner}" />
            <local:TicTacToeElement Grid.Row="10" Grid.Column="0" Value="{Binding Path=Data_3_0.Value}" IsWinner="{Binding Path=Data_3_0.IsWinner}" />
            <local:TicTacToeElement Grid.Row="10" Grid.Column="2" Value="{Binding Path=Data_3_1.Value}" IsWinner="{Binding Path=Data_3_1.IsWinner}" />
            <local:TicTacToeElement Grid.Row="10" Grid.Column="4" Value="{Binding Path=Data_3_2.Value}" IsWinner="{Binding Path=Data_3_2.IsWinner}" />
            <local:TicTacToeElement Grid.Row="10" Grid.Column="6" Value="{Binding Path=Data_3_3.Value}" IsWinner="{Binding Path=Data_3_3.IsWinner}" />

            <skia:SKLottieView x:Name="_confetti"  Grid.ColumnSpan="7" Grid.RowSpan="11"
                Source="cool_fireworks.json"
                RepeatCount="3"
                IsAnimationEnabled="{Binding Path=HasWinner}"
                IsVisible="{Binding Path=HasWinner}"
                AnimationCompleted="_confetti_AnimationCompleted"
                HorizontalOptions="Fill"
                VerticalOptions="Fill">
            </skia:SKLottieView>
        </Grid>
    </Grid>
</ContentPage>